<div class="container">

<h1>Khoi Nguyen's assignment blog</h1>

<h3> My first Rails Application for CoderSchool assignment!</h3>
<br>
<%= form_tag(articles_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Title or body" %>
 <button class="btn btn-success-outline" type="submit">Search</button>
 <% if @articles.blank? %>
  <h4>There are no articles containing the term <%= params[:search] %>.</h4>
<% end %>
 <br>
 <br>

 <nav class="navbar navbar-light bg-faded">
  <a class="navbar-brand" href="#">Navbar</a>
  <ul class="nav navbar-nav">
    <li class="nav-item active">
      <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="articles/1">Features</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="articles/2">Pricing</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="articles/3">About</a>
    </li>
  </ul>
</nav>
<br>
<% end %>
<%= render @articles %>
  
<br>

<%= link_to 'New Article', new_article_path %>

</div>


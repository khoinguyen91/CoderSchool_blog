<%= form_for([@article, @article.comments.build]) do |f| %>
<div class="container">
  <p>
   <b> <%= f.label :commenter %></b><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <b><%= f.label :comments %></b><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
</div>
<% end %>